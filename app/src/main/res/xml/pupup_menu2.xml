<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_margin="16dp"
    android:background="@drawable/wowgamemenu"
    android:orientation="vertical">

    <Button
        android:id="@+id/menu2_item1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Очистить путь"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
    <Button
        android:id="@+id/menu2_item2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Показать путь"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
    <Button
        android:id="@+id/menu2_item3"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Скрыть путь"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
    <Button
        android:id="@+id/menu2_item4"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Сохранить путь"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
    <Button
        android:id="@+id/menu2_item5"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Загрузить путь"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
    <Button
        android:id="@+id/menu2_item6"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:shadowColor="#a89c6a"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="4"
        android:text="Удалить все пути"
        android:textColor="#d4bd61"
        android:gravity="center"
        android:textSize="13dp"
        />
</LinearLayout>