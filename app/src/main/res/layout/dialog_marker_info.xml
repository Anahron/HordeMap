<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Иконки маркера -->

    <!-- Поле для ввода описания -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15sp"
        android:padding="8sp">



        <ImageView
            android:id="@+id/icon2_swords"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:foreground="@drawable/swords_icon"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:alpha="0.3"
            />

        <ImageView
            android:id="@+id/icon1_focus"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:foreground="@drawable/marker_point9"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:alpha="0.3"
            />
        <ImageView
            android:id="@+id/icon3_flag_red"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:foreground="@drawable/flag_red"
            android:alpha="0.3"/>

        <ImageView
            android:id="@+id/icon4_flag_yellow"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:foreground="@drawable/flag_yellow"
            android:alpha="0.3"/>

        <ImageView
            android:id="@+id/icon5_flag_green"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:foreground="@drawable/flag_green"
            android:alpha="0.3"/>

        <ImageView
            android:id="@+id/icon6_flag_blue"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8sp"
            android:foreground="@drawable/flag_blue"
            android:alpha="0.3"/>

    </LinearLayout>

    <EditText
        android:id="@+id/description_edit_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название" />

    <EditText
        android:id="@+id/description_edit_text_number"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        android:visibility="gone"
        android:hint="Введите номер точки 0-9" />
</LinearLayout>
